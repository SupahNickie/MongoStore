<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Cost</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.cost %></td>
        <td><%= link_to 'Show', store_item_path(@store, item) %></td>
        <td><%= link_to 'Edit', edit_store_item_path(@store, item) %></td>
        <td><%= link_to 'Destroy', store_item_path(@store, item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', store_path(@store) %> |
<%= link_to 'New Item', new_store_item_path(@store) %>
